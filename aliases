alias vi="nvim"
alias vim="nvim"
alias grep="grep --color=auto"
alias mkdir="mkdir -p"
alias ra="ranger"
alias sudo="sudo -E"
alias nvi="nvim"
#alias mvim="mvim -v"
alias -s html=vi
alias -s rb=vi
alias -s py=vi
alias -s js=vi
alias -s c=vi
alias -s java=vi
alias -s txt=vi
alias -s gz='tar -xzvf'
alias -s tgz='tar -xzvf'
alias -s zip='unzip'
alias -s bz2='tar -xjvf'
alias tnew='tmux -f ~/.tmux.conf new-session \; split-window -h \; split-window -v \;attach'

if [ -x "$(command -v exa)" ]; then
    alias l="ll"
    alias ls="exa -l --classify --group-directories-first"
    alias ll="exa --long --header --classify --icons --group-directories-first --no-permissions"
    alias lp="exa --long --header --classify --icons --group-directories-first"
    alias la="exa -a --long --header --classify --icons --group-directories-first"
    alias lt="exa --tree --long --header --classify --icons --group-directories-first"
    alias t="exa --tree --header --classify --icons --group-directories-first"
fi
